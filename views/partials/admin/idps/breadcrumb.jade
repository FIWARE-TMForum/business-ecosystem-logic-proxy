.breadcrumb-triangle.z-depth-1
  a(ui-sref="admin.idps", ui-sref-opts="{ reload: true, inherit: false }", ui-sref-active-eq="active")
    span.item-icon.fa.fa-list
    span.item-text #{ __("List") }
  a.active(ng-if="$state.includes('admin.idps.update')", ui-sref="admin.idps.update", ui-sref-opts="{ reload: true }")
    span.item-icon.fa.fa-binoculars
    span.item-text #{ __("Detail") }
  a.active(ng-if="$state.includes('admin.idps.create')", ui-sref="admin.idps.create", ui-sref-opts="{ reload: true }")
    span.item-icon.fa.fa-plus-circle
    span.item-text #{ __("New") }