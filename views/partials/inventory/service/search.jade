ui-view
  .row
    .col-xs-12
      include ./search-toolbar.jade
    .col-xs-12(ng-switch="searchVM.list.loadStatus")
      div(ng-switch-when="LOADED", ng-switch="searchVM.list.length")
        div(ng-switch-when="0")
          .alert.alert-info.text-center #{ __("No services found.") }
        div(ng-switch-default)
          include ./search-list.jade
      div(ng-switch-when="ERROR")
        .alert.alert-danger.text-center {{ searchVM.error }}
      div(ng-switch-default)
        .container-spinner
          span.fa.fa-spinner.fa-spin.fa-2x
      pager(controller="searchVM", size="12", max="12")