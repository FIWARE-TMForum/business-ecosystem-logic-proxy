.table-responsive
  table.table.table-bordered.table-hover
    thead
      tr
        th #{ __("Status") }
        th #{ __("Name") }
        th #{ __("Start Date") }
    tbody
      tr(ng-repeat="service in searchVM.list")
        td
          .status-item.active(class="status-obsolete")
            span.item-icon
            span.item-text {{ service.state }}
        th
          a(ui-sref="inventory.service.detail({ serviceId: service.id })", ui-sref-opts="{ inherit: false }") {{ service.name }}
        td
          time(am-time-ago="service.startDate")
