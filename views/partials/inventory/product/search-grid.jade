.container-flex
  .panel.panel-default.item-product(ng-repeat="product in searchVM.list")
    .panel-heading(
        ui-sref="inventory.product.detail({ productId: product.id })",
        ui-sref-opts="{ inherit: false }",
        ng-mouseenter="hovering = product.id",
        ng-mouseleave="hovering = null"
    )
      .thumbnail.item-product-logo
        img(no-image, ng-src="{{ product.productOffering.getPicture() }}")
        div.item-shadow(ng-class="{'item-shadow-hover': hovering === product.id}")
      a.h4 {{ product.productOffering.name }}
    .panel-body
      p.text-muted
        span v{{ product.productOffering.version }}
        span.pull-right
          time(am-time-ago="product.orderDate")

      .status-group
        .status-item.active(class="status-{{ product.status | lowercase }}")
          span.item-icon
          span.item-text {{ product.status }}

