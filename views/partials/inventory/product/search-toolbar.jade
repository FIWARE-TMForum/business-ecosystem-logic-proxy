.row
  .col-xs-12.col-sm-6
    include ./breadcrumb.jade
  .col-xs-12.col-sm-6
    .btn-toolbar.pull-right
      .btn-group.z-depth-1
        a.btn.btn-default(ng-click="searchVM.showFilters()")
          span.item-icon.fa.fa-sliders
          span.item-text.hidden-xs Filters
      .btn-group.z-depth-1
        a.btn.btn-default(ui-sref="inventory.product({ flow: 1 })", ui-sref-active="active")
          span.item-icon.fa.fa-th
        a.btn.btn-default(ui-sref="inventory.product({ flow: 2 })", ui-sref-active="active")
          span.item-icon.fa.fa-th-list