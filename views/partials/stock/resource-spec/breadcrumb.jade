.breadcrumb-triangle.z-depth-1
  a(ui-sref="stock.resource", ui-sref-opts="{ reload: true, inherit: false }", ui-sref-active-eq="active")
    span.item-icon.fa.fa-list
    span.item-text #{ __("List") }
  a.active(ng-if="searchVM.state.includes('stock.resource.update')", ui-sref="stock.resource.update", ui-sref-opts="{ reload: true }")
    span.item-icon.fa.fa-binoculars
    span.item-text #{ __("Details") }
  a.active(ng-if="searchVM.state.includes('stock.resource.create')", ui-sref="stock.resource.create", ui-sref-opts="{ reload: true }")
    span.item-icon.fa.fa-plus-circle
    span.item-text #{ __("New") }