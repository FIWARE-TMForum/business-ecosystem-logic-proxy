.row
  .col-xs-12(ng-if="updateVM.dataServ.length")
    .panel.panel-default.z-depth-1
      .panel-body
        .h4.text-dark-secondary
          strong #{ __("Services") }
        hr
        .table-responsive
          table.table.table-bordered.table-hover.table-selectable
            thead
              tr
                th #{ __("Status") }
                th #{ __("Name") }
                th #{ __("Last Updated") }
            tbody
              tr(ng-repeat="service in updateVM.dataServ")
                td
                  .status-item.text-nowrap(class="status-{{ service.lifecycleStatus | lowercase }}")
                    span.item-icon
                    span.item-text {{ service.lifecycleStatus }}
                th
                  a(ui-sref="stock.service.update({ serviceId: service.id })", ui-sref-opts="{ inherit: false }") {{ service.name }}
                td
                  time(am-time-ago="service.lastUpdate")
  .col-xs-12(ng-if="!updateVM.dataServ.length")
    .alert.alert-info.text-center #{ __("No service specs included.") }