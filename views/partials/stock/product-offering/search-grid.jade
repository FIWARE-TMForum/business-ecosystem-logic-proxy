.container-flex
  .panel.panel-default.item-product(ng-repeat="offering in searchVM.list")
    .panel-heading.panel-product(
        ui-sref="stock.offering.update({ offeringId: offering.id })",
        ui-sref-opts="{ inherit: false }",
        ng-mouseenter="hovering = offering.id",
        ng-mouseleave="hovering = null"
    )
      .thumbnail.item-product-logo
        img(no-image, ng-src="{{ offering.getPicture() }}")
        div.item-shadow(ng-class="{'item-shadow-hover': hovering === offering.id}")
      a.h4 {{ offering.name }}
    .panel-body
      p.text-muted
        span v{{ offering.version }}
        span.pull-right
          time(am-time-ago="offering.lastUpdate")
      p
        span.label(ng-class="offering.isBundle ? 'label-bundle' : 'label-single'")
          | {{ offering.isBundle ? 'Bundle' : 'Single' }}
      .h5.text-right.text-success(ng-if="offering.getCheapestPriceplan() != null")
        strong
          span From {{ offering.getCheapestPriceplan().price.taxIncludedAmount }} {{ offering.getCheapestPriceplan().price.currencyCode | uppercase }}
      .status-group
        .status-item.active(class="status-{{ offering.lifecycleStatus | lowercase }}")
          span.item-icon
          span.item-text {{ offering.lifecycleStatus }}
